<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- TREEVIEW -->
        <record id="view_disconnected_tree" model="ir.ui.view">
            <field name="name">fpoc.disconnected.tree</field>
            <field name="model">fpoc.disconnected</field>
            <field name="arch" type="xml">
                <tree string="Disconnected Fiscal Printer" create="false" edit="false">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="session_id"/>
                    <button type="object" name="create_fiscal_printer" string="Create" icon="STOCK_NEW"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_fiscal_printer_fiscal_printer_filter" model="ir.ui.view">
            <field name="name">fpoc.fpoc.select</field>
            <field name="model">fpoc.fiscal_printer</field>
            <field name="arch" type="xml">
                <search string="Fiscal Printer" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"/>
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="fpoc.view_fiscal_printer_fiscal_printer_form" model="ir.ui.view">
            <field name="name">fpoc.fpoc.form</field>
            <field name="model">fpoc.fiscal_printer</field>
            <field name="arch" type="xml">
                <form string="fiscal_printer" version="7.0">
                    <field name="allow_z" invisible="1"/>
                    <header>
                        <button name="report_x" type="object" string="Report X" class="oe_highlight" confirm="Desea Imprimir el Reporte X"/>
                        <button name="report_z" type="object" string="Report Z" class="oe_highlight" attrs="{'invisible': [('allow_z','=',False)]}" confirm="Desea Imprimir el Reporte Z"/>
                        <button name="report_x2" type="object" string="Report X2" class="oe_highlight" confirm="Desea Imprimir el Reporte X2"/>
                        <button name="report_z2" type="object" string="Report Z2" class="oe_highlight" confirm="Desea Imprimir el Reporte Z2"/>
                        <button name="report_range_wizard" type="object" string="Report Range" class="oe_highlight"/>
                        <button name="short_test" type="object" string="Test"/>
                    </header>
                    <sheet string="fiscal_printer">
                        <group>
                           <field name="name" />
                           <field name="lastUpdate"/>
                           <field name="session_id"/>
                           <field name='fiscal_config_id' required="1"/>
                           <field name="printerStatus" />
                           <field name="fiscalStatus" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_fiscal_printer_fiscal_printer_tree" model="ir.ui.view">
            <field name="name">fpoc.fpoc.tree</field>
            <field name="model">fpoc.fiscal_printer</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Printer">
                    <field name="name"/>
                    <field name="lastUpdate"/>
                </tree>
            </field>
        </record>

        <!-- TREEVIEW -->
        <record id="view_fiscal_printer_configuration_tree" model="ir.ui.view">
            <field name="name">fpoc.configuration.tree</field>
            <field name="model">fpoc.configuration</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Printer Configuration">
                    <field name="name" />
                    <field name="serial" />
                    <field name="close_date" />
                </tree>
            </field>
        </record>


        <!-- FORMVIEW -->
        <record id="fpoc.view_fiscal_printer_configuration_form" model="ir.ui.view">
            <field name="name">fpoc.configuration.form</field>
            <field name="model">fpoc.configuration</field>
            <field name="arch" type="xml">
                <form string="Fiscal Printer Configuration" version="7.0">
                     <group id="main">
                        <field name="name" />
                         <field name="model" />
                        <field name="serial" />
                        <field name="close_date" />
                     </group>
                </form>
            </field>
        </record>

        <record id="fiscal_printer_report_range_wizard_form" model="ir.ui.view">
            <field name="name">Report Date Range Wizard</field>
            <field name="model">fpoc.report.date.range.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Date Range Wizard">
                    <group>
                        <group>
                            <field name="date_start"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <footer>
                        <button name="execute" string="Send" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</openerp>
